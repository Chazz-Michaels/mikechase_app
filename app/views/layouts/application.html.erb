<!DOCTYPE html>
<html>
  <head>
    <title>Michael Chase HQ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.ico'), :rel => 'icon', :type => 'image/x-icon' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'false' %>
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Ubuntu" rel="stylesheet">
  </head>

  <body>

    <%= render 'layouts/navigation' %>

    <div class="offset-sm-1 col-sm-10 main-content">

      <div class="background-image"><%= image_tag('bg2.jpg',id:'bg-image') %></div>
      <%= yield %>

    </div>

  </body>
</html>
